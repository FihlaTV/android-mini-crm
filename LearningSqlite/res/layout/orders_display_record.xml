<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/orders_display_container"
     >
	
    <TextView
        android:id="@+id/header_orders_display"
        style="@style/H1" />
    
        <TextView
            style="@style/DisplayLabel"            
            android:text="@string/label_order_date_ordered"/>
        <View style="@style/minorHr"/>
        <TextView android:id="@+id/content_order_date_ordered"
            style="@style/DisplayContent"
            />
        <TextView 
            style="@style/DisplayLabel"            
            android:text="@string/label_order_target_date"/>
        <View style="@style/minorHr"/>
        <TextView android:id="@+id/content_order_target_date"
            style="@style/DisplayContent"
            />
        <TextView 
            style="@style/DisplayLabel"            
            android:text="@string/label_order_address"/>
        <View style="@style/minorHr"/>
        <TextView android:id="@+id/content_orders_address"
            style="@style/DisplayContent"
            />
        
        <View style="@style/hr"
            android:id="@+id/orders_customer_details_divider"
            android:visibility="gone"/>
        
	    <LinearLayout android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:id="@+id/orders_customer_fragment_container"></LinearLayout>
	    <View style="@style/hr"
	        android:visibility="gone"
	        android:id="@+id/orders_workers_details_divider"/>
	    <LinearLayout android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:id="@+id/orders_workers_fragment_container"></LinearLayout>
	    <View style="@style/hr"
	        android:visibility="gone"
	        android:id="@+id/orders_products_details_divider"/>
	    <LinearLayout android:layout_width="match_parent"
	        android:orientation="vertical"
	        android:layout_height="wrap_content"
	        android:id="@+id/orders_products_fragment_container"></LinearLayout>
</LinearLayout>
</ScrollView>
