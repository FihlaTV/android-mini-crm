<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    
	<EditText style="@style/FormInputs"
	    android:id="@+id/order_new_record_title"
	    android:hint="@string/order_title_hint"
	    />
	    <EditText android:id="@+id/order_new_record_order_date"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:hint="@string/order_date_hint"
	    android:inputType="date"
	    android:onClick="openDatePicker"/>
	<EditText android:id="@+id/order_new_record_fill_by_date"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:hint="@string/order_fill_by_date_hint"
	    android:inputType="date"
	    android:onClick="openDatePicker"/>
    <EditText style="@style/FormInputs"
	    android:id="@+id/order_new_record_address"
	    android:hint="@string/order_address_hint"
	    />
    <Button android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_add_new_customer"
        android:onClick="addCustomer"/>
    <LinearLayout 
        style="@android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button style="@android:attr/buttonBarButtonStyle"
            android:text="@string/save_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="saveNew"/>
        <Button style="@android:attr/buttonBarButtonStyle" 
            android:text="@string/cancel_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="cancel"/>
        
    </LinearLayout>
    
    
</LinearLayout>
</ScrollView>
